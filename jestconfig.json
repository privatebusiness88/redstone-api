{
  "transform": {
    "^.+\\.(t|j)sx?$": "ts-jest"
  },
  "verbose": true,
  "bail": 1,
  "testEnvironment": "jsdom",
  "collectCoverage": true,
  "testTimeout": 20000,
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ]
}
